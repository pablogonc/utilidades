#include <commons/collections/dictionary.h>
#include <commons/config.h>
#include <readline/readline.h>
#include <stdlib.h>

#include <commons/string.h>




void arrayStringToArrayInt(char* arrayString,int* intArray, int* size){
	char ** values = string_get_string_as_array(arrayString);

	int element=0;

	while(values[element] != NULL){
		intArray = realloc(intArray,sizeof(int)* (element+1) );
		intArray[element] = atoi( values[element] );

		element++;
	}

	*size = element;


}








int main(){

	int* array= malloc(sizeof(int));
	int size;

	arrayStringToArrayInt("[1,5,45,2]",array,&size);

	for(int i=0; i<size; i++){
		printf(" '%d' ",array[i]);
	}

	/*
